@inject WebUI.CustomLocalizer Localizer
@model DataAccess.Entities.KonuEtiketi

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title text-center text-uppercase">@Localizer["konuEtiketiDuzenle"] <span></span></h4>
</div>
<div class="modal-body">
    <form id="subjectEditForm" action="/Admin/Home/SubjectEdit" method="post">
        <input type="text" name="Id" id="KonuId" value="@Model.Id" hidden=""/>

        <div class="form-group col-md-12">
            <div class="col-xs-12">
                <label for="EtiketAdiTr" class="control-label">@Localizer["etiketAdiTr"]</label>
                <input class="form-control" type="text" required="" name="EtiketAdiTr" id="EtiketAdiTr" value="@Model.EtiketAdiTr">
            </div>
        </div>
        <div class="form-group col-md-12">
            <div class="col-xs-12">
                <label for="EtiketAdiEng" class="control-label">@Localizer["etiketAdiEng"]</label>
                <input class="form-control" type="text" required="" name="EtiketAdiEng" id="EtiketAdiEng" value="@Model.EtiketAdiEng">
            </div>
        </div>
        <div class="form-group col-md-12">
            <div class="col-xs-12">
                <label for="EditorId" class="control-label">@Localizer["editor"]</label>
                @Html.DropDownList("EditorId", new SelectList(ViewBag.Editors, "Id", "Adi", Model.EditorId), new {@class = "form-control"})
            </div>
        </div>

        <div class="row"></div>
        <div class="modal-footer p-r-30">
            <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">@Localizer["kapat"]</button>
            <button type="submit" id="konuDuzenleSubmitButon" class="btn btn-danger waves-effect waves-light text-uppercase">@Localizer["kaydet"]</button>
        </div>

    </form>
</div>

