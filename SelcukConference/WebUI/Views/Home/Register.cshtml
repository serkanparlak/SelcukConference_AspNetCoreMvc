@inject WebUI.CustomLocalizer Localizer
@{
    ViewData["Title"] = "Register";
    Layout = null;
}
@model WebUI.Models.RegisterViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/png" sizes="16x16" href="~/images/favicon.png">
    <title>@Localizer["kaydol"]</title>
    <!-- Bootstrap Core CSS -->
    <link href="~/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- animation CSS -->
    <link href="~/css/animate.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/css/style-admin.css" rel="stylesheet">
    <!-- color CSS -->
    <link href="~/css/colors/megna.css" id="theme" rel="stylesheet">
</head>

<body>
    <!-- Preloader -->
    <div class="preloader">
        <svg class="circular" viewBox="25 25 50 50">
            <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
        </svg>
    </div>
    <section id="wrapper" class="new-login-register" style="position:relative">
        <div class="lg-info-panel">
            <div class="inner-panel">
                <a href="/Home/" class="p-20 di"><img src="~/images/admin-logo-dark.png"></a>
                <div class="lg-content">
                    @*<h2>THE ULTIMATE & MULTIPURPOSE ADMIN TEMPLATE OF 2017</h2>
                        <p class="text-muted">with this admin you can get 2000+ pages, 500+ ui component, 2000+ icons, different demos and many more... </p>*@
                </div>
            </div>
        </div>
        <div class="new-login-box" style="margin-top:0">
            <div class="white-box">
                <h3 class="box-title m-b-0">@Localizer["kaydol"]</h3> <small>@Localizer["bilginiziGirin"]</small>
                <form class="form-horizontal new-lg-form" id="loginform" action="/Home/Register" method="post" data-toggle="validator">
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input class="form-control" type="text" required="" placeholder="@Localizer["unvan"] (Prof. Dr.)" name="Unvan" id="Unvan">
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input class="form-control" type="text" required="" placeholder="@Localizer["kurum"]" name="Kurum" id="Kurum">
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input class="form-control" type="text" required="" placeholder="@Localizer["ad"]" name="Adi" id="Adi">
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input class="form-control" type="text" required="" placeholder="@Localizer["soyad"]" name="Soyadi" id="Soyadi">
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input class="form-control" type="text" required="" placeholder="@Localizer["telefon"]" name="Telefon" id="Telefon">
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input class="form-control" type="email" required="" placeholder="@Localizer["mail"]" name="Mail" id="Mail" data-error="@Localizer["gecerliMailGir"]" onblur="emailKontrol()">
                            <div class="help-block with-errors"></div>
                            <span class="text-danger" id="mailMesaj" style="display:none">@Localizer["dahaOnceKullanildi"]</span>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input type="password" data-toggle="validator" data-minlength="6" class="form-control" name="Sifre" id="Password" placeholder="@Localizer["sifre"]" data-error="@Localizer["enAz{0}Karakter", 6]" required>
                            <span class="help-block with-errors"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <input type="password" class="form-control" id="PasswordConfirm" data-match="#Password" data-match-error="@Localizer["sifreEslesmiyor"]" placeholder="@Localizer["sifreTekrar"]" required>
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            @Html.DropDownList("UlkeList", new SelectList(Model.Ulkeler, "Id", "UlkeAdi", 213), new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            @Html.DropDownList("SehirId", new SelectList(Model.Turkiye, "Id", "SehirAdi", 6444), new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="radio col-xs-4 col-xs-offset-2">
                            <input type="radio" name="Cinsiyet" id="erkek" value="1" required="">
                            <label for="erkek"> @Localizer["erkek"]</label>
                        </div>
                        <div class="radio col-xs-4 col-xs-offset-1">
                            <input type="radio" name="Cinsiyet" id="kadin" value="2" required="">
                            <label for="kadin"> @Localizer["kadin"]</label>
                        </div>
                        <div class="help-block with-errors"></div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button class="btn btn-primary btn-lg btn-block btn-rounded text-uppercase waves-effect waves-light" type="submit" id="submitBtn">@Localizer["kaydol"]</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <!-- jQuery -->
    <script src="~/plugins/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- Menu Plugin JavaScript -->
    <script src="~/plugins/sidebar-nav/dist/sidebar-nav.min.js"></script>
    <!--slimscroll JavaScript -->
    <script src="~/js/jquery.slimscroll.js"></script>
    <!--Wave Effects -->
    <script src="~/js/waves.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="~/js/custom.min.js"></script>
    <script src="~/js/validator.js"></script>
    <script>
        $(document).ready(function () {
            $("#UlkeList").on('change', function () {
                var ulkeid = $("#UlkeList option:selected").val();
                $.ajax({
                    url: '/Home/GetCityList',
                    data: { "ulkeId": ulkeid },
                    success: function (sehirler) {
                        $('#SehirId').empty();
                        for (var i = 0; i < sehirler.length; i++) {
                            $('#SehirId').append($("<option></option>").attr("value", sehirler[i].id).text(sehirler[i].sehirAdi));
                        }
                    }
                });
            });
        });

        function emailKontrol() {
            var mail = $('#Mail').val();
            $.getJSON('/Home/MailKontrol', { "mail": mail }, function (sonuc) {
                if (!sonuc) {
                    $('#submitBtn').attr('type', 'button');
                    $('#mailMesaj').show();
                } else {
                    $('#submitBtn').attr('type', 'submit');
                    $('#mailMesaj').hide();
                }
            });
        }
    </script>
</body>

</html>
