@inject WebUI.CustomLocalizer Localizer
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/images/favicon.png">
    <title>@Localizer["selcukKonferans"]</title>
    <!-- styles -->
    <link href="~/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/plugins/sidebar-nav/dist/sidebar-nav.min.css" rel="stylesheet">
    <link href="~/css/animate.css" rel="stylesheet">
    <link href="~/css/style-admin.css" rel="stylesheet">
    <link href="~/plugins/toast-master/css/jquery.toast.css" rel="stylesheet" />
    <link href="~/css/colors/megna.css" rel="stylesheet" />
    <!-- javascripts -->
    <script src="~/plugins/jquery/dist/jquery.min.js"></script>
    <script src="~/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/plugins/sidebar-nav/dist/sidebar-nav.min.js"></script>
    @*<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jQuery-slimScroll/1.3.8/jquery.slimscroll.min.js"></script>*@
    <script src="~/plugins/toast-master/js/jquery.toast.js"></script>
    <script src="~/js/jquery.slimscroll.js"></script>
    <script src="~/js/waves.js"></script>
    <script src="~/js/custom.min.js"></script>
</head>

<body class="fix-header">
    <!-- Preloader -->
    <div class="preloader">
        <svg class="circular" viewBox="25 25 50 50">
            <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
        </svg>
    </div>
    <div id="wrapper">
        <!-- Top Navigation -->

        @await Component.InvokeAsync("HeaderUser")

        <!-- End Top Navigation -->
        <!-- Top navbar-header -->

        @await Component.InvokeAsync("LeftMenuUser")

        <!-- Top navbar-header end -->
        <!-- Page Content -->

        @RenderBody()
        
        <!-- /#page-wrapper -->
        <footer class="footer text-center"> @DateTime.Now.Year &copy; @Localizer["selcukKonferans"]</footer>
    </div>
    <!-- /#wrapper -->
</body>

</html>
